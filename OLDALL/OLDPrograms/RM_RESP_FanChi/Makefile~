#
INST_DIR = $(HOME)/bin
BIN  = rm_instrument_response

fflags = -O2 -Wall -ffixed-line-length-none
cflags = -O2 -Wall

LDLIBS =   -L/home/barmin/FFTW/lib -lfftw3

FFLAGS = $(DBG) $(fflags)

CFLAGS = $(DBG) $(cflags)

FC = g77

CC = gcc

DBG =

FOBJS =  rmresponse.o driver_c.o


$(BIN) : $(FOBJS)
	$(FC) $(FFLAGS) $(CFLAGS) $(FOBJS) -o $(BIN) $(LDLIBS) 

install :: $(BIN)
	install -s $(BIN) $(INST_DIR)

clean ::
	rm -f $(BIN) core $(FOBJS)
